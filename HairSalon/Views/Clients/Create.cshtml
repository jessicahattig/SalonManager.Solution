@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<div class="header">
  <h4>Add a new client</h4>
</div>
<div class="form-container">
  <p><strong>NOTE:</strong> You need to have at least one stylist before you can add a client. Go to @Html.ActionLink("this page", "Create", "Stylists") to add a stylist.</p>


  @using (Html.BeginForm())
  {
    <div class="form-group">
      @* @Html.LabelFor(model => model.Description) *@
      <p>Client name: @Html.TextBoxFor(model => model.Description, new { required = "required" })</p>
      <br>
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")

    <input type="submit" value="Add new client" class="btn btn-default" />
    </div>
  }
</div>

<nav class="navbar">
  <p>@Html.ActionLink("Show all clients", "Index")</p>
</nav>