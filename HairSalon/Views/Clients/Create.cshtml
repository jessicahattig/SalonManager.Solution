@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<div class="header">
  <h4>Add a new client</h4>
</div>
<p><strong>NOTE:</strong> You need to have at least one stylist before you can add a client!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Stylists") add a stylist.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new { required = "required" })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client" class="btn btn-default" />
}
<nav class="navbar">
  <p>@Html.ActionLink("Show all clients", "Index")</p>
</nav>