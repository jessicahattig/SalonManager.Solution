@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div class="header">
  <h1>Clients</h1>
</div>
@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
    }
  </ul>
}

<nav class="navbar">
  <p>@Html.ActionLink("Add new client", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</nav>